{
  "name": "social",
  "title": "Social",
  "version": "6.0.1",
  "platform": ">=5.3.0",
  "skipClone": false,
  "releaseNotes": "* Improved various UX and UI elements\n* For developers - switched to pre-uploading attachments to s3, then sending image link to create status/comment",
  "nativeChanges": {
    "lastVersion": "6.0.0",
    "settingsKeys": []
  },
  "description": "Let members create posts, comment and like them",
  "categories": ["users"],
  "dependencies": [
    "shoutem.application",
    "shoutem.auth",
    "shoutem.firebase",
    "shoutem.i18n",
    "shoutem.layouts",
    "shoutem.navigation",
    "shoutem.permissions",
    "shoutem.user-profile"
  ],
  "i18n": {
    "locale": "en",
    "translationPath": "server/translations/en.json"
  },
  "icon": "server/assets/add-community-image.png",
  "screens": [
    {
      "name": "SocialWallScreen"
    },
    {
      "name": "StatusDetailsScreen",
      "settings": {
        "disableAdBanner": true
      }
    },
    {
      "name": "CreateStatusScreen",
      "settings": {
        "disableAdBanner": true
      }
    },
    {
      "name": "MembersScreen"
    },
    {
      "name": "SearchScreen"
    },
    {
      "name": "NotificationSettingsScreen"
    },
    {
      "name": "BlockedUsers"
    }
  ],
  "shortcuts": [
    {
      "title": "Wall",
      "name": "wall",
      "screen": "@.SocialWallScreen",
      "icon": "theme://feed-wall.png",
      "adminPages": [
        {
          "page": "@.ShortcutInfoPage",
          "title": "Info"
        }
      ]
    },
    {
      "title": "Members",
      "name": "members",
      "screen": "@.MembersScreen",
      "icon": "theme://members.png",
      "adminPages": [
        {
          "page": "@.UserGroupsVisibilityPage",
          "title": "User Groups Filtering"
        },
        {
          "page": "@.ShortcutInfoPage",
          "title": "Info"
        }
      ],
      "settings": {
        "showAllUsers": true
      }
    },
    {
      "name": "BlockedUsers",
      "title": "Blocked users",
      "screen": "@.BlockedUsers",
      "icon": "theme://members.png"
    }
  ],
  "settingsPages": [
    {
      "page": "@.SocialSettingsPage",
      "title": "Settings"
    }
  ],
  "pages": [
    {
      "name": "SocialSettingsPage",
      "path": "server/build/index.html?page=SocialSettingsPage",
      "type": "html"
    },
    {
      "name": "ShortcutInfoPage",
      "path": "server/build/index.html?page=ShortcutInfoPage",
      "type": "html"
    },
    {
      "name": "UserGroupsVisibilityPage",
      "type": "react-page"
    }
  ],
  "settings": {
    "authApiEndpoint": "auth.api.shoutem.com",
    "maxStatusLength": 140,
    "enablePhotoAttachments": true,
    "enableComments": true,
    "enableInteractions": true
  },
  "cloud": [
    {
      "type": "api",
      "script": "npm run migrate:docker && npm run start:server:docker"
    }
  ]
}
