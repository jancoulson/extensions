{
  "name": "video",
  "title": "Videos",
  "version": "5.0.1",
  "platform": "^5",
  "description": "Show a video gallery",
  "releaseNotes": "* Replaced loading spinner with animated placeholder\n* Added My Videos screen for favorites\n* NOTE: If you have a custom extension extending this one, you may need to update it as there are breaking changes",
  "icon": "server/assets/add-videos-image.png",
  "dependencies": [
    "shoutem.cms",
    "shoutem.favorites",
    "shoutem.i18n",
    "shoutem.layouts",
    "shoutem.navigation"
  ],
  "categories": ["media"],
  "i18n": {
    "locale": "en",
    "translationPath": "server/translations/en.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shoutem/extensions"
  },
  "shortcuts": [
    {
      "name": "openVideosList",
      "title": "Videos",
      "icon": "theme://play.png",
      "screen": "@.VideosList",
      "capabilities": ["shoutem.cms.search", "shoutem.cms.import-csv"],
      "adminPages": [
        {
          "page": "shoutem.cms.CmsPage",
          "title": "Content",
          "parameters": {
            "schema": "@.Videos"
          }
        },
        {
          "page": "shoutem.layouts.LayoutPage",
          "title": "Layout"
        }
      ],
      "settings": {
        "hasFavorites": true,
        "defaultShortcutTitle": "Videos",
        "extensionTitle": "Videos"
      }
    },
    {
      "name": "MyVideosShortcut",
      "title": "My Videos",
      "icon": "theme://play.png",
      "description": "List of favorited videos.",
      "screen": "@.MyVideosList",
      "adminPages": [
        {
          "page": "shoutem.layouts.LayoutPage",
          "title": "Layout"
        }
      ],
      "settings": {
        "favoritesSchemas": ["@.Videos"]
      }
    }
  ],
  "screens": [
    {
      "name": "VideosCompactList",
      "title": "Compact list",
      "image": "server/assets/screens/compact-list.png",
      "settings": {
        "hasFeaturedItem": false,
        "listType": "compact-list"
      },
      "extends": "@.VideosList"
    },
    {
      "name": "VideosList",
      "title": "Tile list",
      "image": "server/assets/screens/tile-list.png",
      "settings": {
        "hasFeaturedItem": false,
        "listType": "tile-list"
      },
      "navigatesTo": ["@.VideoDetails"]
    },
    {
      "name": "VideoDetails",
      "title": "Details",
      "image": "server/assets/screens/details.png",
      "settings": {
        "shareable": true,
        "disableAdBanner": true
      }
    },
    {
      "name": "VideoDetailsWithoutShare",
      "title": "Details without share button",
      "image": "server/assets/screens/details-without-share.png",
      "extends": "@.VideoDetails",
      "settings": {
        "shareable": false,
        "disableAdBanner": true
      }
    },
    {
      "name": "MyVideosList",
      "title": "Tile favorites list",
      "image": "server/assets/screens/tile-list.png",
      "navigatesTo": ["@.VideoDetails"]
    },
    {
      "name": "MyVideosCompactList",
      "title": "Compact favorites list",
      "image": "server/assets/screens/compact-list.png",
      "extends": "@.MyVideosList",
      "navigatesTo": ["@.VideoDetails"]
    }
  ],
  "dataSchemas": [
    {
      "name": "Videos",
      "path": "server/data-schemas/Videos.json"
    }
  ]
}
