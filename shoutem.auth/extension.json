{
  "name": "auth",
  "version": "6.0.0",
  "platform": ">=8",
  "title": "Users",
  "icon": "server/assets/add-authentication-image.png",
  "releaseNotes": "* Bug fixes",
  "description": "Show user profile, sign out user",
  "dependencies": [
    "shoutem.application",
    "shoutem.camera",
    "shoutem.i18n",
    "shoutem.navigation",
    "shoutem.notification-center",
    "shoutem.permissions",
    "shoutem.redux",
    "shoutem.web-view"
  ],
  "categories": [
    "users"
  ],
  "i18n": {
    "locale": "en",
    "translationPath": "server/translations/en.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shoutem/extensions"
  },
  "screens": [
    {
      "name": "LoginScreen"
    },
    {
      "name": "RegisterScreen"
    },
    {
      "name": "UserProfileScreen"
    },
    {
      "name": "EditProfileScreen"
    },
    {
      "name": "MyProfileScreen"
    },
    {
      "name": "PasswordRecoveryScreen"
    },
    {
      "name": "ChangePasswordScreen"
    },
    {
      "name": "ConfirmDeletionScreen"
    }
  ],
  "shortcuts": [
    {
      "title": "Logout",
      "description": "Allows user to logout from application",
      "name": "logoutAction",
      "icon": "theme://exit-to-app.png",
      "action": "@.logoutAction"
    },
    {
      "title": "My profile",
      "description": "This screen lets users manage their user profile",
      "icon": "theme://profile.png",
      "name": "openMyProfile",
      "screen": "@.MyProfileScreen"
    }
  ],
  "settingsPages": [
    {
      "page": "@.UsersPage",
      "title": "Users"
    },
    {
      "page": "@.ProtectedScreensPage",
      "title": "Protected Screens"
    },
    {
      "page": "@.UserGroupsPage",
      "title": "Groups"
    },
    {
      "page": "@.GeneralSettingsPage",
      "title": "General"
    },
    {
      "page": "@.GdprSettingsPage",
      "title": "GDPR"
    }
  ],
  "pages": [
    {
      "name": "GeneralSettingsPage",
      "type": "react-page"
    },
    {
      "name": "ProtectedScreensPage",
      "type": "react-page"
    },
    {
      "name": "UsersPage",
      "type": "react-page"
    },
    {
      "name": "UserGroupsPage",
      "type": "react-page"
    },
    {
      "name": "GdprSettingsPage",
      "type": "react-page"
    }
  ],
  "settings": {
    "signupEnabled": true,
    "manuallyApproveMembers": false,
    "allScreensProtected": false,
    "gdpr": {
      "privacyPolicyLink": null,
      "termsOfServiceLink": null,
      "consentToggleActive": true,
      "consentRequired": true
    },
    "newsletter": {
      "consentToggleActive": false
    },
    "providers": {
      "email": {
        "enabled": true
      },
      "facebook": {
        "enabled": false
      },
      "apple": {
        "enabled": false,
        "buttonDarkModeStyle": true
      },
      "twitter": {
        "enabled": false
      }
    }
  },
  "journeyTriggers": [
    {
      "id": "shoutem.auth.complete-registration",
      "name": "App dismissed - user not registered"
    }
  ]
}
